<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout  xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/harvest_background"
    tools:context="com.statsnail.roberts.statsnail.fragments.HarvestChooserFragment">

    <ImageView
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:id="@+id/logo_bg"
        android:src="@drawable/ic_logo"
        android:transitionName="logo_transition"
        android:layout_marginTop="64dp"
        android:layout_centerHorizontal="true"/>

    <FrameLayout
        android:id="@+id/harvest_container"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout="@layout/fragment_chooser"/>

    <include layout="@layout/content_chooser" />

